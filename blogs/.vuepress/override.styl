.nav-links a{font-size:1rem;font-weight:bold;line-height:2rem;padding:0 1rem;}
.home .hero h1{font-weight:normal;}

.sidebar{width:15rem;}
.page{padding-left:15rem;}
.content:not(.custom){max-width:850px;}

.nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active{border-color:#ff4341;}
.home .hero .action-button,.home .hero .action-button:hover{background-color:#ff4341;border-bottom:1px solid #ff4341;}
.home .hero .description{color:#ff4341;font-size:1.8rem;}

a,.page-nav .next,
.dropdown-wrapper .nav-dropdown .dropdown-item a.router-link-active{color: #ff4341;}
.dropdown-wrapper .nav-dropdown .dropdown-item a.router-link-active::after{border-left: 5px solid #ff4341;}
a.sidebar-link.active,a.sidebar-link:hover{color: #ff4341;border-left-color: #ff4341;}
.custom-block.tip{border-color: #ff4341;}
.nav-links a:hover, .nav-links a.router-link-active,
.dropdown-wrapper .nav-dropdown .dropdown-item a:hover{color:#ff4341;}

.com-tit1{font-size: 1.2rem;font-weight:bold;}
.com-description{line-height:30px;padding:10px 0;color:red;}
.c-wrap1{padding:20px 0;}
.c-wrap1 a{display: inline-block;font-size:1.0rem;color:#000;font-weight:normal;padding:10px 5px 10px 60px;width:170px;height:40px;line-height:40px;margin-right:20px;margin-bottom:20px;border: 1px solid #E9E9E9;box-shadow: 0 1px 2px 0 rgba(191, 200, 209, 0.3);text-decoration: none;cursor:pointer;text-indent:10px;}
.content:not(.custom) .c-wrap1 a:hover{text-decoration: none;}
.c-wrap1 a.muti-category{color:red;font-weight:bold;}
